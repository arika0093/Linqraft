<Project>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <PackageDescription>Write Select queries easily with on-demand DTO generation and null-propagation operators.</PackageDescription>
    <PackageProjectUrl>https://arika0093.github.io/Linqraft/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/arika0093/Linqraft</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <Authors>arika0093</Authors>
    <PackageReadmeFile>README.nuget.md</PackageReadmeFile>
    <PackageIcon>linqraft.png</PackageIcon>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference
      Include="Nerdbank.GitVersioning"
      Version="3.*"
      Condition="!Exists('packages.config')"
    >
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <None Include="../../docs/README.nuget.md" Pack="true" PackagePath="\" />
    <None Include="../../assets/linqraft.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
