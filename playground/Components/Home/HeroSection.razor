@code {

    private string SelectExprCodeSample = @"// write query you want to generate
var orderDto = await dbContext.Orders
    .SelectExpr<Order, OrderDto>(o => new {
        o.Id,
        CustomerName = o.Customer?.Name,
        AddressName = o.Customer?.Address?.Name,
        ItemDatas = o.OrderItems.Select(oi => new {
            ProductName = oi.Product?.Name,
            oi.Quantity
        })
    })
    .ToList();
// -> auto generated OrderDto and nested classes!";

    private readonly string[] rotatingFeatures = [
        "On-Demand DTO Generation",
        "Null Conditional Operators",
        "Zero Runtime Dependencies"
    ];
    
    private int currentFeatureIndex = 0;
    private bool isTransitioning = false;
    private System.Timers.Timer? featureRotationTimer;
    private int gitHubStars = 0;
    private CancellationTokenSource? _cts;
    
    protected override async Task OnInitializedAsync()
    {
        _cts = new CancellationTokenSource();
        featureRotationTimer = new System.Timers.Timer(3000);
        featureRotationTimer.Elapsed += OnTimerElapsed;
        featureRotationTimer.AutoReset = true;
        featureRotationTimer.Start();
        
        await FetchGitHubStars();
    }
    
    private async void OnTimerElapsed(object? sender, System.Timers.ElapsedEventArgs e)
    {
        try
        {
            await RotateFeature();
        }
        catch (ObjectDisposedException)
        {
            // Component was disposed during the operation - ignore
        }
    }
    
    private async Task RotateFeature()
    {
        if (_cts?.Token.IsCancellationRequested == true) return;
        
        isTransitioning = true;
        await InvokeAsync(StateHasChanged);
        
        try
        {
            await Task.Delay(300, _cts?.Token ?? CancellationToken.None);
        }
        catch (TaskCanceledException)
        {
            return;
        }
        
        if (_cts?.Token.IsCancellationRequested == true) return;
        
        currentFeatureIndex = (currentFeatureIndex + 1) % rotatingFeatures.Length;
        isTransitioning = false;
        
        await InvokeAsync(StateHasChanged);
    }
    
    private async Task FetchGitHubStars()
    {
        try
        {
            using var request = new HttpRequestMessage(HttpMethod.Get, "https://api.github.com/repos/arika0093/Linqraft");
            
            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                var repo = await response.Content.ReadFromJsonAsync<GitHubRepo>();
                if (repo != null)
                {
                    gitHubStars = repo.StargazersCount;
                    await InvokeAsync(StateHasChanged);
                }
            }
        }
        catch (HttpRequestException) { }
        catch (JsonException) { }
    }
    
    public async ValueTask DisposeAsync()
    {
        _cts?.Cancel();
        _cts?.Dispose();
        _cts = null;
        
        if (featureRotationTimer != null)
        {
            featureRotationTimer.Elapsed -= OnTimerElapsed;
            featureRotationTimer.Stop();
            featureRotationTimer.Dispose();
            featureRotationTimer = null;
        }
    }
    
    private class GitHubRepo
    {
        [JsonPropertyName("stargazers_count")]
        public int StargazersCount { get; set; }
    }
}
